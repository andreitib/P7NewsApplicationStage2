<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titlestyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensansregular</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/articletitlecolor</item>
        <item name="android:layout_gravity">center</item>
     </style>
    <style name="articlesectionstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/owswaldstencil</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/articlesectioncolor</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>
    <style name="timeanddatestyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/oswaldregular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="authorstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/blackjack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/authorcolor</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="listitemstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@color/backgroundcolor</item>
    </style>

</resources>
